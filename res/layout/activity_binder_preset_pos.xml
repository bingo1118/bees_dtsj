<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:orientation="vertical" >

   <RelativeLayout
        android:id="@+id/modify_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/play_back_title">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:src="@drawable/touxiang" />

        <TextView
            android:id="@+id/contact_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="11"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/defence_rela"
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:layout_below="@id/modify_header"
	    android:background="#2ca2cf"
	    >
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/bind_chuanganqi_yuzhiwei"
		    android:textColor="#ffffff"
		    android:textSize="16sp"
		    android:layout_centerInParent="true"
		    />    
	</RelativeLayout>
	
	<LinearLayout
	    android:id="@+id/choice_defence"
	    android:layout_width="match_parent"
	    android:layout_height="90dp"
	    android:layout_below="@id/defence_rela"
	    android:layout_marginTop="20dp"
	    
	    >
	<RelativeLayout 
		    android:id="@+id/defence_im0"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@drawable/add_defence_image_selector1"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/yuan"
	            android:layout_centerHorizontal="true"
	            android:text="1"
	            android:textColor="#ffffffff"
	            android:gravity="center"
	            />

		    <ImageView 
		        android:layout_width="1dp"
		        android:layout_height="match_parent"
		        android:layout_alignParentRight="true"
		        android:background="@drawable/delete_shuxian"
		        />
	    </RelativeLayout>
	   <RelativeLayout 
	        android:id="@+id/defence_im1"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@drawable/add_defence_image_selector1"
	        >
		    <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/yuan"
	            android:layout_centerHorizontal="true"
	            android:text="2"
	            android:textColor="#ffffffff"
	            android:gravity="center"
	            />
		    <ImageView 
		        android:layout_width="1dp"
		        android:layout_height="match_parent"
		        android:layout_alignParentRight="true"
		        android:background="@drawable/delete_shuxian"
		        />
	    </RelativeLayout>
	   <RelativeLayout 
	        android:id="@+id/defence_im2"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@drawable/add_defence_image_selector1"
	        >

		     <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/yuan"
	            android:layout_centerHorizontal="true"
	            android:text="3"
	            android:textColor="#ffffffff"
	            android:gravity="center"
	            />
		    <ImageView 
		        android:layout_width="1dp"
		        android:layout_height="match_parent"
		        android:layout_alignParentRight="true"
		        android:background="@drawable/delete_shuxian"
		        />
	    </RelativeLayout>
	     <RelativeLayout 
	         android:id="@+id/defence_im3"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@drawable/add_defence_image_selector1"
	        >

		    <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/yuan"
	            android:layout_centerHorizontal="true"
	            android:text="4"
	            android:textColor="#ffffffff"
	            android:gravity="center"
	            />
		    
	    </RelativeLayout>
	</LinearLayout>
	
	<LinearLayout
	    android:layout_below="@id/choice_defence"
	    android:layout_width="match_parent"
	    android:layout_height="90dp"
	    android:layout_marginTop="20dp"
	    >
	    <RelativeLayout 
	        android:id="@+id/defence_im4"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@drawable/add_defence_image_selector1"
	        >

		    <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/yuan"
	            android:layout_centerHorizontal="true"
	            android:text="5"
	            android:textColor="#ffffffff"
	            android:gravity="center"
	            />
		    <ImageView 
		        android:layout_width="1dp"
		        android:layout_height="match_parent"
		        android:layout_alignParentRight="true"
		        android:background="@drawable/delete_shuxian"
		        />
	    </RelativeLayout>
	   <RelativeLayout 
	        android:id="@+id/defence_im5"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@drawable/add_defence_image_selector1"
	        >

	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/yuan"
	            android:layout_centerHorizontal="true"
	            android:text="6"
	            android:textColor="#ffffffff"
	            android:gravity="center"
	            />
	        <ImageView 
		        android:layout_width="1dp"
		        android:layout_height="match_parent"
		        android:layout_alignParentRight="true"
		        android:background="@drawable/delete_shuxian"
		        />
	    </RelativeLayout>
	    
	    <RelativeLayout
	        android:id="@+id/defence_im6" 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@drawable/add_defence_image_selector1"
	        >

		    <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/yuan"
	            android:layout_centerHorizontal="true"
	            android:text="7"
	            android:textColor="#ffffffff"
	            android:gravity="center"
	            />
		    <ImageView 
		        android:layout_width="1dp"
		        android:layout_height="match_parent"
		        android:layout_alignParentRight="true"
		        android:background="@drawable/delete_shuxian"
		        />
		</RelativeLayout>
	    <RelativeLayout
	        android:id="@+id/defence_im7" 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@drawable/add_defence_image_selector1"
	        >

	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/yuan"
	            android:layout_centerHorizontal="true"
	            android:text="8"
	            android:textColor="#ffffffff"
	            android:gravity="center"
	            />
	    </RelativeLayout>
	</LinearLayout>

</RelativeLayout>