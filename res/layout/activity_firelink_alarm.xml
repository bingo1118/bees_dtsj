<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alarm_bj"
    android:layout_gravity="center"
    >
    <LinearLayout 
        android:id="@+id/alarm_fk_center"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="330dp"
        >
        <ImageView 
            android:id="@+id/alarm_fk_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@anim/allarming"
            android:scaleType="center"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/alarm_msg_tv" 
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:text="大厅的烟感发出报警消息"
        />
    <TextView 
        android:id="@+id/alarm_msg_time_tv"
        android:layout_below="@id/alarm_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="报警时间:2016-05-05 12:15:16"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        />
    <TextView 
        android:id="@+id/close_alarm_voice"
        android:layout_below="@id/alarm_msg_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_alarm_voice"
        android:layout_centerInParent="true"
        android:textColor="@color/alpha_blue"
        android:layout_marginTop="20dp"
        />
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_below="@id/alarm_msg_time_tv"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        >
        <ImageView
	        android:id="@+id/alarm_back"
	        android:layout_width="120dp"
	        android:layout_height="60dp"
	        android:src="@drawable/alarm_button_selector"
	        />
        <ImageView
	        android:id="@+id/watch_video_image"
	        android:layout_width="120dp"
	        android:layout_height="60dp"
	        android:layout_toRightOf="@id/alarm_back"
	        android:layout_marginLeft="30dp"
	        android:src="@drawable/watch_video_button_selector"
	        android:visibility="gone"
	        />
    </RelativeLayout>
    
</RelativeLayout>
