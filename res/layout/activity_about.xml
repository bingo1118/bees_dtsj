<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shou_ye_bg"
    >
    <RelativeLayout
        android:id="@+id/about_rela" 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dao_hang_lan"
        >
        <LinearLayout 
            android:layout_width="wrap_content"
        	android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="center" />
            <TextView 
            android:id="@+id/name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="东泰盛居智慧物联网"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            />            
        </LinearLayout>
        
    </RelativeLayout>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#a4a4a4"
        android:layout_below="@id/about_rela"
        />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/about_rela"
        android:layout_marginTop="50dp"
        >
        
        <RelativeLayout 
            android:id="@+id/about_version_rela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            >
            <TextView
	            android:id="@+id/about_vension_tv" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#9b9b9b"
	            android:text="当前版本号:"
            />
	        <TextView
	            android:id="@+id/about_version" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="1.0"
	            android:textColor="#9b9b9b"
	            android:layout_toRightOf="@id/about_vension_tv"
	            />
        </RelativeLayout>
        <ImageView
            android:id="@+id/about_image2"
            android:layout_height="120dp"
            android:layout_width="120dp"
            android:src="@drawable/dtsj_qr"
            android:layout_below="@id/about_version_rela"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_image2"
            android:text="东泰盛居微信公众号"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            />
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            >
            <TextView
                android:id="@+id/about_name_tv" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="吉林省东泰智慧城市安防科技有限公司"
                android:textColor="#9b9b9b"
                />
            <TextView 
                android:id="@+id/about_address_tv" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_name_tv"
                android:gravity="center_horizontal"
                android:text="地址：长春市高新区飞跃路东北亚科技园K栋"
                android:textColor="#9b9b9b"
                />
            <TextView 
                android:id="@+id/about_gw_tv" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@id/about_address_tv"
                android:text="网址：www.jlzdst.com  电话：0431-89562835"
                android:textColor="#9b9b9b"
                />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>