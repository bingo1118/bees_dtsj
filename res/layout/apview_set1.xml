<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   		android:id="@+id/l_control"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f4f4f4"
        android:orientation="horizontal" >
        
    <RelativeLayout 
            android:id="@+id/play_back_im"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            >
            <ImageView 
                 android:id="@+id/play_back_imageview"
	            android:layout_width="35dp"
	            android:layout_height="35dp"
	            android:src="@drawable/tubiao_hf"
	            android:layout_centerHorizontal="true"
	            
         	/>
             <TextView 
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/play_back_imageview"
	            android:text="@string/video"
	            android:textSize="12sp"
	            android:textColor="#595959"
	            android:layout_centerHorizontal="true"
	            android:gravity="center"/>
        </RelativeLayout>
        
        <RelativeLayout 
            android:id="@+id/image_im"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            >
           <ImageView 
                android:id="@+id/image_imageview"
	            android:layout_width="35dp"
	            android:layout_height="35dp"
	            android:src="@drawable/tubiao_yx"
	            android:layout_centerHorizontal="true"
	            
         	/>
             <TextView 
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/image_imageview"
	            android:text="@string/image"
	            android:textSize="12sp"
	            android:textColor="#595959"
	            android:layout_centerHorizontal="true"
	            android:gravity="center"/>
        </RelativeLayout>
         
          <RelativeLayout 
            android:id="@+id/preset_pos_im"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            >
            <ImageView 
                android:id="@+id/preset_pos_imageview"
	            android:layout_width="35dp"
	            android:layout_height="35dp"
	            android:src="@drawable/tubiao_yzw"
	            android:layout_centerHorizontal="true"
	            
         	/>
             <TextView 
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/preset_pos_imageview"
	            android:text="@string/preset"
	            android:textSize="12sp"
	            android:textColor="#595959"
	            android:layout_centerHorizontal="true"
	            android:gravity="center"/>
          </RelativeLayout>
          
           <RelativeLayout 
               	android:id="@+id/share_dev_im"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:layout_gravity="center_vertical"
	            >
            <ImageView 
                android:id="@+id/share_dev_imageview"
	            android:layout_width="35dp"
	            android:layout_height="35dp"
	            android:src="@drawable/tubiao_gx"
	            android:layout_centerHorizontal="true"
	            
         	/>
             <TextView 
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/share_dev_imageview"
	            android:text="@string/share"
	            android:textSize="12sp"
	            android:textColor="#595959"
	            android:layout_centerHorizontal="true"
	            android:gravity="center"/>
          </RelativeLayout>
    	<RelativeLayout
            android:id="@+id/setting_im" 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            >
            <ImageView 
                android:id="@+id/setting_imageview"
	            android:layout_width="35dp"
	            android:layout_height="35dp"
	            android:src="@drawable/tb_shezhi_xg"
	            android:layout_centerHorizontal="true"
	            
         	/>
             <TextView 
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/setting_imageview"
	            android:text="@string/modify"
	            android:textSize="12sp"
	            android:textColor="#595959"
	            android:layout_centerHorizontal="true"
	            android:gravity="center"/>
         </RelativeLayout>

</LinearLayout>
