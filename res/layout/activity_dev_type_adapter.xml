<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sclb"
        >
        <ImageView
            android:id="@+id/dev_type_iamge_logo"
            android:layout_width="45dp"
            android:layout_height="105dp"
            android:src="@drawable/sclb_mc"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"

            />
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="90dp"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/dev_type_image" 
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/sclb_sj"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="5dp"
                />
            <TextView 
                android:id="@+id/dev_type_record_time_name" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/record_time"
                android:layout_toRightOf="@id/dev_type_image"
                android:layout_marginTop="10dp"
                />
            <TextView 
                android:id="@+id/dev_type_record_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5/6 19:15:55"
                android:layout_toRightOf="@id/dev_type_record_time_name"
                android:layout_margin="10dp"
                />
            <RelativeLayout
                android:id="@+id/dev_type_location_rela" 
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@id/dev_type_record_time"
	            android:layout_centerVertical="true"
	            android:gravity="center"
                >
                <TextView
	                android:id="@+id/dev_type_location" 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="16sp"
	                android:text="@string/kitchen"
	                android:textColor="#000000"
                />
            </RelativeLayout>
            <ImageView 
                android:id="@+id/modify_alarm_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/modify_alarm_name"
                android:layout_below="@id/dev_type_record_time"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/dev_type_location_rela"
                />
            <TextView
                android:id="@+id/dev_type_name" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/devicelistadapter_smoke_detection_alarm"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:textColor="#000000"
                />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>