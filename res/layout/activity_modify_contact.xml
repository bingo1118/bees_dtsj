<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dao_hang_lan"
    android:orientation="vertical" >

   <RelativeLayout
        android:id="@+id/modify_header"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/play_back_title">

        <ImageView
            android:id="@+id/header_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/touxiang" />

        <TextView
            android:id="@+id/contactId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="11116"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </RelativeLayout>

       <RelativeLayout
           android:id="@+id/layout_cNumber"
           android:layout_width="250dp"
           android:layout_height="@dimen/edit_height"
           android:layout_marginLeft="@dimen/item_left_right_margin"
           android:layout_marginRight="@dimen/item_left_right_margin"
           android:layout_marginTop="10dp"
           android:layout_gravity="center_horizontal"
           android:background="@drawable/corner_tiao_single_bg" >

           <EditText
               android:id="@+id/contactName"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginLeft="@dimen/inner_margin_left"
               android:layout_marginRight="@dimen/inner_margin_right"
               android:background="#00000000"
               android:gravity="left|center_vertical"
               android:hint="@string/input_contact_name"
               android:singleLine="true"
               android:text=""
               android:textColor="@color/text_color_black"
               android:textSize="@dimen/text_size_edit" />
       </RelativeLayout>
	

     <RelativeLayout
         android:layout_width="250dp"
         android:layout_height="@dimen/edit_height"
         android:layout_marginLeft="@dimen/item_left_right_margin"
         android:layout_marginRight="@dimen/item_left_right_margin"
         android:layout_marginTop="10dp"
         android:layout_gravity="center_horizontal"
         android:background="@drawable/corner_tiao_single_bg" >

         <EditText
             android:id="@+id/contactPwdOld"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginLeft="@dimen/inner_margin_left"
             android:layout_marginRight="@dimen/inner_margin_right"
             android:background="#00000000"
             android:gravity="left|center_vertical"
             android:hint="@string/input_contact_pwd"
             android:singleLine="true"
             android:inputType="textPassword"
             android:text=""
             android:textColor="@color/text_color_black"
             android:textSize="@dimen/text_size_edit" />
     </RelativeLayout>
     
     <RelativeLayout
         android:layout_width="250dp"
         android:layout_height="@dimen/edit_height"
         android:layout_marginLeft="@dimen/item_left_right_margin"
         android:layout_marginRight="@dimen/item_left_right_margin"
         android:layout_marginTop="10dp"
         android:layout_gravity="center_horizontal"
         android:background="@drawable/corner_tiao_single_bg" >

         <EditText
             android:id="@+id/contactPwdNewA"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginLeft="@dimen/inner_margin_left"
             android:layout_marginRight="@dimen/inner_margin_right"
             android:background="#00000000"
             android:gravity="left|center_vertical"
             android:hint="@string/input_device_new_psw"
             android:singleLine="true"
             android:inputType="textPassword"
             android:text=""
             android:textColor="@color/text_color_black"
             android:textSize="@dimen/text_size_edit" />
     </RelativeLayout>
     <RelativeLayout
         android:layout_width="250dp"
         android:layout_height="@dimen/edit_height"
         android:layout_marginLeft="@dimen/item_left_right_margin"
         android:layout_marginRight="@dimen/item_left_right_margin"
         android:layout_marginTop="10dp"
         android:layout_gravity="center_horizontal"
         android:background="@drawable/corner_tiao_single_bg" >

         <EditText
             android:id="@+id/contactPwdNewB"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginLeft="@dimen/inner_margin_left"
             android:layout_marginRight="@dimen/inner_margin_right"
             android:background="#00000000"
             android:gravity="left|center_vertical"
             android:hint="@string/input_device_new_psw_again"
             android:singleLine="true"
             android:text=""
             android:inputType="textPassword"
             android:textColor="@color/text_color_black"
             android:textSize="@dimen/text_size_edit" />
     </RelativeLayout>
	<Button
        android:id="@+id/save"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_button_selector"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:text="@string/save"/>
   
</LinearLayout>