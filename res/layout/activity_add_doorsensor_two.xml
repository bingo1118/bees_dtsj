<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shou_ye_bg"
    android:orientation="vertical" >
	
    <ImageView 
        android:id="@+id/step_two_image"
        android:layout_width="match_parent"
        android:layout_height="570dp"
        />
    <TextView 
        android:id="@+id/add_dev_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:lines="5"
        android:layout_marginBottom="150dp"/>
    
    <RelativeLayout
        android:id="@+id/doorsensor_location_rela" 
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/edit_view"
        >
        <EditText 
	        android:id="@+id/doorsensor_location"
	        android:layout_width="230dp"
	        android:layout_height="30dp"
	        android:layout_centerInParent="true"
			android:background="@null"
			android:textColor="#000000"
        />
    </RelativeLayout>
    

    <Button 
        android:id="@+id/add_doorsensor_action_two"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/next"
        />
</RelativeLayout>