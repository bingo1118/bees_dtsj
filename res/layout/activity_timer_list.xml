<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/timer_list_title" 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dao_hang_lan"
        >
	  	<TextView
	  	    android:layout_width="wrap_content"
	  	    android:layout_height="wrap_content"
	  	    android:layout_centerInParent="true"
	  	    android:textColor="#000000"
	  	    android:text="@string/socket_timer"
	  	    android:layout_marginTop="10dp"
	  	    android:textSize="19sp"
	  	    />
	  	<TextView
	  	    android:id="@+id/timer_list_back" 
	  	    android:layout_width="wrap_content"
	  	    android:layout_height="wrap_content"
	  	    android:layout_centerVertical="true"
	  	    android:visibility="gone"
	  	    android:text="@string/back"
	  	    />
  	</RelativeLayout>
	<LinearLayout
	    android:id="@+id/lili" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/timer_list_title"
	    android:layout_above="@+id/li"
	    android:background="#ffffff"
    	>
    	<ListView
		    android:id="@+id/timer_list" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:focusable="false"
			android:listSelector="@color/shou_ye_bg"
		    android:divider="#7f7f7f"
		    android:dividerHeight="1dp"
	    >   
    	</ListView>
    </LinearLayout>	
    <RelativeLayout
        android:id="@+id/li" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
        android:background="#ffffff"
        >
        <ImageView
            android:id="@+id/add_timer" 
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/timer_selector"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           	android:layout_below="@id/add_timer"
           	android:text="@string/add_timer"
           	android:textColor="#000000"
           	android:layout_marginTop="10dp"
           	android:layout_centerInParent="true"
           	android:visibility="gone"
            />

	</RelativeLayout>
</RelativeLayout>