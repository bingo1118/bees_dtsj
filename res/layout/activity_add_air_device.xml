<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView 
        android:id="@+id/air_device_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_air_dev"
        android:layout_alignParentBottom="true"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:lines="5"
        android:layout_marginBottom="200dp"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp"
        android:orientation="horizontal">
        <TextView 
        android:id="@+id/device_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:textColor="@color/wifi_change_color"
        android:textSize="16sp"
        android:lines="1"
        android:text="@string/dev_name"/>
        <EditText 
        android:id="@+id/device_name_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"/>
        <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"/>
               
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="155dp"
        android:orientation="horizontal">
        <TextView 
        android:id="@+id/device_mac_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:textColor="@color/wifi_change_color"
        android:textSize="16sp"
        android:text="MACï¼š"/>
        <RelativeLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5">
        <EditText 
        android:id="@+id/device_mac_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <Button
        android:id="@+id/qr"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignRight="@id/device_mac_edit"
        android:layout_marginRight="5dp"
        android:layout_alignBaseline="@id/device_mac_edit"
        android:background="@drawable/air_saoma"/>
        </RelativeLayout>
        <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"/>
	</LinearLayout>
    
    
    <Button 
        android:id="@+id/add_air_dev_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/next"
        />
</RelativeLayout>