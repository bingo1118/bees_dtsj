<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/item_rela" 
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="@drawable/alarm_messgae_item"
        >
        <ImageView
            android:id="@+id/message_adapter_image" 
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/firelink_alarm"
            />
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            >
            <RelativeLayout
                android:id="@+id/location_tv_rela"
                android:layout_width="match_parent"
	            android:layout_height="95dp"
	            android:gravity="center"
                >
                <ImageView
                    android:id="@+id/dingwei_image" 
                    android:layout_width="30dp"
                    android:layout_height="22dp"
                    android:src="@drawable/dingwei"
                    />
                <TextView
		            android:id="@+id/location_tv" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="厨房"
		            android:layout_toRightOf="@id/dingwei_image"
		            android:textColor="#000000"
		            android:textSize="17sp"
	            />
            </RelativeLayout>
	        
	        <TextView 
	            android:id="@+id/alarm_dev_name" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/location_tv_rela"
	            android:textColor="#000000"
	            android:textSize="16sp"
	            android:layout_marginTop="5dp"
	            android:layout_centerHorizontal="true"
	            android:text="@string/devicelistadapter_smoke_detection_alarm"
	            />
	        <TextView
	            android:id="@+id/host_name"  
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/alarm_dev_name"
	            android:layout_marginTop="10dp"
	            android:textSize="16sp"
	            android:textColor="#000000"
	            android:layout_centerHorizontal="true"
	            android:text="名称"
	            />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="170dp"
            android:layout_centerHorizontal="true"
            >
	        <TextView
	            android:id="@+id/alarm_time_str"  
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#000000"
	            android:text="@string/alarmactivity_alarm_time"
	            />
	        <TextView
	            android:id="@+id/alarm_time_tv" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#000000"
	            android:layout_toRightOf="@id/alarm_time_str"
	            android:text="2016年5月6日  PM15:15:15"
	            />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>