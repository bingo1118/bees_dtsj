<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    >
    <RelativeLayout
        android:id="@+id/socket_info_bg" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
  	<TextView
  	    android:id="@+id/mTextView" 
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:textSize="21sp"
  	    android:layout_margin="10dp"
		android:textColor="#ffffff"
		android:layout_centerHorizontal="true"
  	    android:text="@string/back"
  	    />
  	<ImageView
  	    android:id="@+id/more_control" 
  	    android:layout_width="30dp"
  	    android:layout_height="30dp"
  	    android:layout_alignParentRight="true"
  	    android:layout_margin="10dp"
  	    android:src="@drawable/more"
  	    />
	<ImageView
	    android:id="@+id/socket_mImageView"
		android:layout_width="200dp"
		android:layout_height="180dp"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="115dp"
		android:background="@drawable/dev_button"
		android:clickable="true"
		/>
     
	<TextView 
	    android:id="@+id/relate_tv_name"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:layout_below="@id/socket_mImageView"
		android:layout_marginTop="15dp"
		android:textSize="17sp"
		android:textColor="#ffffff"
		android:gravity="center"
		android:layout_centerHorizontal="true"/>
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/relate_tv_name"
	    android:layout_marginTop="85dp"
	    >
	    <RelativeLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="40dp"
	        >
	        <ImageView
	            android:id="@+id/open_or_close" 
	            android:layout_width="55dp"
	            android:layout_height="55dp"
	            android:src="@drawable/switch_selector"
	            />
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	           	android:layout_below="@id/open_or_close"
	           	android:text="@string/switcher"
	           	android:textColor="#ffffff"
	           	android:layout_marginTop="10dp"
	           	android:layout_centerInParent="true"
	           	android:textSize="17sp"
	            />
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:layout_marginRight="50dp"
	        >
	        <ImageView
	            android:id="@+id/relate_image"
	            android:layout_width="55dp"
	            android:layout_height="55dp"
	            android:src="@drawable/relate_selector"
	            />
	        <TextView
	            android:id="@+id/relate_tv" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	           	android:layout_below="@id/relate_image"
	           	android:text="@string/deviceinfoactivity_bind"
	           	android:textColor="#ffffff"
	           	android:layout_marginTop="10dp"
	           	android:layout_centerInParent="true"
	           	android:textSize="17sp"
	            />
	    </RelativeLayout>
	    
	     <RelativeLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="40dp"
	        >
	        <ImageView
	            android:id="@+id/mTimer" 
	            android:layout_width="55dp"
	            android:layout_height="55dp"
	            android:src="@drawable/time_click_selector"
	            />
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	           	android:layout_below="@id/mTimer"
	           	android:text="@string/timer"
	           	android:textColor="#ffffff"
	           	android:layout_marginTop="10dp"
	           	android:layout_centerInParent="true"
	           	android:textSize="17sp"
	            />
	    </RelativeLayout>
	</RelativeLayout>
	</RelativeLayout>
	<include layout="@layout/more_control"/>
</RelativeLayout>