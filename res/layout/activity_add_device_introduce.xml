<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    <ImageView 
        android:id="@+id/liuchengtu2_image"
        android:layout_width="match_parent"
        android:layout_height="570dp"
        />
    <RelativeLayout 
        android:layout_above="@+id/rela"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="25dp"
        >
        <TextView 
            android:id="@+id/wifi_name"
	        android:layout_width="wrap_content"
	        android:layout_height="25dp"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="35dp"
	        android:textSize="16sp"
        />
	    <TextView 
	        android:id="@+id/device_wifi_name"
	        android:layout_width="wrap_content"
	        android:layout_height="25dp"
	        android:layout_centerVertical="true"
	        android:textSize="16sp"
	        android:layout_marginRight="35dp"
	        android:layout_alignParentRight="true"
	        android:text="@string/activity_add_device_introduce_change_wifi"
	        />
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/rela"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:background="@drawable/edit_view"
        android:layout_above="@+id/next_action_two_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        >
        <EditText 
            android:id="@+id/wifi_pwd"
	        android:layout_width="280dp"
	        android:layout_height="40dp"
	        android:layout_centerInParent="true"
	        android:hint="@string/activity_add_device_introduce_input_wifi_psw"
	        android:background="@null"/>
    </RelativeLayout>
    
    <Button 
        android:id="@+id/next_action_two_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/next"
        />
     <include layout="@layout/wifi_list_control"/>
</RelativeLayout>