<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/modify_dialog"
    >
    <RelativeLayout 
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
        <TextView
            android:id="@+id/relate_dialog_info" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/is_delete_data"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="17sp"
            />
     </RelativeLayout>
      <ImageView 
        android:layout_width="match_parent"
        android:src="@drawable/list_item_line"
       	android:layout_height="wrap_content"
       	android:scaleType="center"
        />
     
    <LinearLayout 
        android:id="@+id/relate_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <RelativeLayout 
            android:id="@+id/relate_cancle_delete" 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/relate_cancle_delete_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/cancel"
	            android:textSize="17sp"
	            android:textColor="#000000"
	            android:layout_marginLeft="30dp"
	            android:layout_alignParentLeft="true"
	            android:layout_centerInParent="true"
	            />
        </RelativeLayout>
        
        <RelativeLayout 
            android:id="@+id/relate_confire_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
             <TextView 
                 android:id="@+id/relate_confire_delete_tv"  
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/delete"
	            android:textSize="17sp"
	            android:textColor="#000000"
	            android:layout_marginRight="30dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerInParent="true"
	            />
        </RelativeLayout>
       
    </LinearLayout>
</LinearLayout>